<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Spinner
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:id="@+id/s_sets_spinner"
            android:layout_marginTop="208dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:text="Set 1"
            android:id="@+id/tv_set_number"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/et_kg_input" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.307" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/s_emom_spinner"/>

    <EditText
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_exercise_name"
            android:inputType="text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/s_sets_spinner" app:layout_constraintVertical_bias="0.965"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_reps_input"
            android:inputType="number" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="264dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/s_emom_spinner"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_kg_input"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/et_reps_input" android:layout_marginEnd="4dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/s_emom_spinner"/>

    <EditText
            android:layout_width="63dp"
            android:layout_height="56dp"
            android:id="@+id/et_rest_sec"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_set_number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>


    <Spinner
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:id="@+id/s_emom_spinner"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/s_sets_spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/et_exercise_note"
            android:inputType="textMultiLine"
            android:hint="Note for this exercise"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_rest_sec"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/b_finish_workout"
            android:text="Finish Workout"
            android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>